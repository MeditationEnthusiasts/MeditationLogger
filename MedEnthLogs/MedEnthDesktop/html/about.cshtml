    @Html.Raw(Model.CommonHead)
    <link type="text/css" rel="stylesheet" href="css/pure/pricing.css" />
    <link type="text/css" rel="stylesheet" href="css/pure/two-col.css" />
</head>
<body>
    <div id="layout" class="content pure-g">
        @Html.Raw(Model.NavBar)
        <div id="main" class="pure-u-1">
            <h1>About:</h1>

            <div class="info-tables">
                <div class="info-table">
                    <div class="info-table-free">
                        <div class="info-table-header">
                            <h2>Version:</h2>
                            <span class="info-table-price">@Model.VersionString</span>
                        </div>
                    </div>
                </div>
            </div>

            <table cellspacing="0" cellpadding="4px" border="2px">
                <tr>
                    <td><strong>Visit Site:</strong></td>
                    <td><a href="https://meditationenthusiasts.org" target="_blank">https://meditationenthusiasts.org</a></td>
